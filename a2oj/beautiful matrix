#include<iostream>
#include<bits/stdc++.h>
using namespace std  ; 
int main()
{
#ifndef ONLINE_JUDGE
freopen("input.txt", "r", stdin);
freopen("output.txt", "w", stdout);
#endif 
    int a, b ,c , d , e ; 
    int a1 , b1 , c1 , d1 , e1 ; 
    int row ;
    for (int i = 1; i <= 5; ++i)
    {
        cin>>a>>b>>c>>d>>e ; 
        if (a==1 || b==1 || c==1 || d==1 ||e==1)
        {
            row = i ; 
            if (a==1)
            {
                a1=2 ; 
            }
            else
                a1=0 ; 
              if (b==1)
            {
                b1=1 ; 
            }  
            else
                b1=0 ; 
             if (d==1)
            {
                b1=1 ; 
            }  
            else
                d1=0 ; 
             if (e==1)
            {
                e1=2 ; 
            }
            else
                e1=0 ; 
        }
        
    }
    if (row==3 && c==1)
    {
        cout<<"0"<<endl;
    }
    else
        cout<<abs(3-row)+a1+b1+d1+e1<<endl;
}

    
